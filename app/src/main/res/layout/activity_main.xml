<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/play_uri_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PlayUri"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@+id/play_asset_btn"/>

    <Button
        android:id="@+id/play_asset_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PlayAsset"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/play_uri_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/record_pcm_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecordPcm"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/play_asset_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>